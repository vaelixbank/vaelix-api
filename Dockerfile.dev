# ============================================
# Vaelix Bank API - Development Docker Image
# ============================================
# Development environment with hot reload and debugging
# ============================================

FROM node:18-alpine AS development

# Install pnpm globally
RUN npm install -g pnpm@9.15.0

# Install development tools
RUN apk add --no-cache \
    git \
    curl \
    vim \
    htop \
    bash \
    dumb-init

# Create non-root user for development
RUN addgroup -g 1001 -S nodejs && \
    adduser -S vaelix-dev -u 1001

# Set working directory
WORKDIR /app

# Change ownership to development user
RUN chown -R vaelix-dev:nodejs /app
USER vaelix-dev

# Copy package files
COPY --chown=vaelix-dev:nodejs package.json pnpm-lock.yaml ./

# Install all dependencies (including dev dependencies)
RUN pnpm install

# Copy source code
COPY --chown=vaelix-dev:nodejs . .

# Expose ports
EXPOSE 3000 9229

# Health check for development
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Default command for development
CMD ["pnpm", "run", "dev"]

# ============================================
# OCI Labels for development container
# ============================================
LABEL org.opencontainers.image.title="Vaelix Bank API - Development" \
      org.opencontainers.image.description="Development environment for Vaelix Bank API" \
      org.opencontainers.image.version="dev"